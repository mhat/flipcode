<% content_for :refresh_tag do %> 
  <meta http-equiv="refresh" content="1"/>
<% end %>

<% if @game %>
  <div class="page-header">
    <h1>GAME ON</h1>
  </div>
  <div class="row">
    <% @game.teams.each do |team| %>
      <div class="span6 scoreboard-box">
        <div class="shrinker">
          <h2><%= team %></h2>
          <h4>Player <%= team.turn %> of <%= team.players_count %></h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="span12">&nbsp;</div>
  </div>
  <div class="row">
    <% @game.teams.each do |team| %>
      <div class="span6 scoreboard-box">
        <div class="shrinker">
          <h3>CHALLENGE</h3>
          <h4><%= team.flip %></h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="span12">&nbsp;</div>
  </div>
  <div class="row">
    <% @game.teams.each do |team| %>
      <div class="span6 scoreboard-box">
        <div class="shrinker">
          <h3>ATTEMPT <%= team.turn_attempts + 1 %></h3>
          <textarea style="width: 500px; height: 200px; font-family: monospace; font-weight: bold"><%= team.current_text %></textarea>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="page-header">
    <% if Game.last_game %>
      <h1><%= Game.last_game.winning_team %> WON THE LAST GAME</h1>
    <% else %>
      <h1>THERE IS NO GAME</h1>
    <% end %>
  </div>
  <% if Team.waiting %>
    <h3><%= Team.waiting %> IS WAITING FOR A CHALLENGER</h3>
  <% end %>
<% end %>
