<div class="page-header">
  <h1><%= current_team %></h1>
</div>

<% content_for :refresh_tag do %> 
  <meta http-equiv="refresh" content="5"/>
<% end %>

<% if current_team.game %>
  <% if current_game.winning_team %>
    <% if current_game.winning_team == current_team %>
      <h2>YOU WON</h2>
      <%= link_to 'KEEP IT UP', new_team_path, :class => 'btn btn-primary' %>
    <% else %>
      <h2>YOU LOST</h2>
      <%= link_to 'QUIT LOSING', new_team_path, :class => 'btn btn-primary' %>
    <% end %>
  <% else %>
    <h4>FIGHTING AGAINST <%= current_team.opponent %></h4>
    <h4>PLAYER <%= current_team.turn %> IS UP</h4>
    <h2>FIRST YOU DRINK</h2>
    <h4><%= link_to 'THEN YOU FUCKING CLICK HERE', flip_path(current_team.flip), :class => 'btn btn-primary' %></h4>
  <% end %>
<% else %>
  <h2>Waiting for an opponent...</h2>
<% end %>
